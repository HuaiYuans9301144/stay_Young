<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/laroche_posay"
                    android:layout_width="213dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/laroche_posay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/T03"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/loction"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/T04"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/temp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/T05"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/cloud"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/T06"
                        android:layout_width="191dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="紫外線指數：7"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/T07"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="PM2.5：14"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <!--區域風險等級-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color1"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/v3anaysis"
                android:contentDescription="@string/todo1" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/ToPageTV"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!--肌膚監測站-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ToPage3BTN"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/woman1"
                android:contentDescription="@string/ToPage3BTN" />

            <TextView
                android:id="@+id/ToPage3TV"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/ToPage3TV"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="normal" />
        </LinearLayout>

            <!--膚質防護評估-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/green"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ToPage4BTN"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/v3level"
                    android:contentDescription="@string/ToPage4BTN" />

                <TextView
                    android:id="@+id/toPage4TV"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="@string/protectrank"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>



        <!--個人化推播設定-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color6"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ToPage6BTN"
                    android:layout_width="67dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="48dp"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/v3set"
                    android:contentDescription="@string/setting" />

                <TextView
                    android:id="@+id/toPage6TV"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/ToPage6TV"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <!--產品資訊-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color3"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ToPage5BTN"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/v3product"
                    android:contentDescription="@string/產品資訊" />

                <TextView
                    android:id="@+id/toPage5TV"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="@string/ToPage5TV"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>